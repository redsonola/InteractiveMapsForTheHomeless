package com.somethingfurry.maps_and_then_some;

import processing.core.PApplet;
import de.fhpotsdam.unfolding.Map;
import de.fhpotsdam.unfolding.geo.Location;

public class DemographcMapMarker extends ImageMapMarker {
	
	DemoInfo _demo; 

	DemographcMapMarker(Location location, PApplet display, Map map, LocationType locationType, DemoInfo demo) {
		super(location, display, map, locationType);
		// TODO Auto-generated constructor stub
	}

	//show mediaType -- display picture! 
	public void presentMedia()
	{
		//load and create image
		if (_defaults)
		{
			_width = _img.width; 
			_height = _img.height;
		}
		int xy[] = drawBorder();
		_display.image(_img, xy[0]+BORDER_SIZE/2,  xy[1]+BORDER_SIZE/2, _width, _height);
	}
	
	

}
