package com.somethingfurry.maps_and_then_some;

import processing.core.PApplet;
import de.fhpotsdam.unfolding.geo.Location;
import de.fhpotsdam.unfolding.Map;
import processing.video.*;



public class VideoLocationMapMarker extends ImageMapMarker {
	
	Movie _movie;
	String _filename;
	
	VideoLocationMapMarker(Location location, PApplet display, Map map, String filename)
	{
		super(location, display, map, VIDEO_ICON);	
	}
	
	VideoLocationMapMarker(Location location, PApplet display, Map map, String filename, int w, int h)
	{
		super(location, display, map, VIDEO_ICON, w, h);	
	}	
	
	//show mediaType
	public void presentMedia()
	{
		  image(_movie, mouseX-myMovie.width/2, mouseY-myMovie.height/2);
	}
		
	//event class for when closing media
	public void onStartMedia()
	{	
		_movie = new Movie(_display, _filename);
	}	
	
	//stop audio
	public void onCloseMedia()
	{
		_movie.dispose();
	}	
	
}