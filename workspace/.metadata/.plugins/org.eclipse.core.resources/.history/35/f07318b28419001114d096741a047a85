package com.somethingfurry.maps_and_then_some;

import processing.core.PApplet;
import de.fhpotsdam.unfolding.Map;
import de.fhpotsdam.unfolding.geo.Location;
import ddf.minim.*;

public class AudioLocationMapMarker extends MediaMarker {
	
	private String _filename; 
	private Minim _minim; 
	AudioPlayer _player;

	
	AudioLocationMapMarker(Location location, PApplet display, Map map)
	{
		super(location, display, map, AUDIO_ICON);	
		_minim = new Minim(_display); 
	}	
	
	AudioLocationMapMarker(Location location, PApplet display, Map map, String filename)
	{
		super(location, display, map, AUDIO_ICON);
		_filename = filename; 
	}		
	
	//show mediaType
	public void presentMedia()
	{
		  player = minim.loadFile("groove.mp3", 2048);
	}
	
}