package com.somethingfurry.maps_and_then_some;

import de.fhpotsdam.unfolding.geo.*;
import processing.core.*;
 

public class LocationMapMarker {
	
	public enum MediaType { PHOTO, VIDEO, AUDIO, STORY, ZOOMED_OUT };
	protected MediaType _mediaType; 
	protected Location _location;
	protected PApplet _display;
	
	LocationMapMarker(Location location, PApplet display)
	{
		_location = location;
		_display = display; 
	}
	
	public void draw()
	{
		  _display.fill(215, 0, 0, 100);
		  
		  float xy[] = 
		  _display.ellipse(xy[0], xy[1], 20, 20);
			  
	}
	
	//show mediaType
	public void presentMedia()
	{
		
		
	}
	
	public void move()
	{
		
	}
	
}


